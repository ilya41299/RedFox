#include <iostream> 
#include <string> 
using namespace std; 

int main() 
{ 
string word;  
cout<<"enter the word:"; 
cin>>word; 
int dl= word.length(), x=0; 

for(int i=0;i!=dl/2;i++)
{
    if(word[i]!=word[dl-i-1]) 
{ 
        cout<<"0";x=1;break; } 
} 

    if(x==0) 
{ 
        cout<<"1"; 
} 
return 0; 
}
