#include <iostream>
#include <cstring>
#include <string>

using namespace std;

int main() 

{
  string x, y, z;
	cout<<"Enter word"<<endl;
	getline(cin, x);
          for(unsigned int i=0; i<x.length(); i++)
    	    { 
    	    if((((int)x[i]>47)&&((int)x[i]<58))||(((int)x[i]>64)&&((int)x[i]<91))||(((int)x[i]>96)&&((int)x[i]<123)))
		        {y+=tolower(x[i]);};
		      }
		    
    	    for(unsigned int j=0; j<y.length(); j++)
	           {z+=y[y.length()-1-j];}
	
    	    if(y==z)
	          {cout<<"1"<<endl;}
	        else
	          {cout<<"0"<<endl;}
	
	return 0;
}
